.img {
  background: #f7f7f7;
  font-size: 30rpx;
  text-align: center;
}

.inputtype {
  border-radius: 20rpx;
  text-align: center;
}

.three {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.textcolor {
  color: #666666;
  font-size: 30rpx;
}

.position {
  width: 100%;
  position: absolute;
  top: 80rpx;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
}

.margin {
  margin: 20rpx;
}

.inputbgd {
  background: #f7f7f7;
  border-radius: 20rpx;
  position: relative;
}

.mar {
  margin: 10rpx 20rpx 10rpx 0rpx;
  background: pink;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.bgd {
  background: rgb(red, green, blue);
}

.clear {
  width: 40rpx;
  height: 40rpx;
  /* border: 1rpx solid red; */
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 20rpx;
  z-index: 99;
}